# 애플리케이션 설정
ENVIRONMENT=development  # development 또는 production
APP_NAME=WordSearchGame
DEBUG=True

# 서버 설정
HOST=0.0.0.0
PORT=8000
WORKERS=4

# 데이터베이스 설정
DATABASE_URL=sqlite:///./wordsearch.db
# 프로덕션 환경에서는 PostgreSQL 사용 권장
# DATABASE_URL=postgresql://user:password@localhost:5432/wordsearch

# 보안 설정
SECRET_KEY=your-secret-key-change-this-in-production
# 인증 토큰 만료 시간 (분)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# 소셜 로그인 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# 속도 제한 설정 (Production 환경에서만 적용)
RATE_LIMIT=100  # 제한 시간 동안 최대 요청 수
RATE_LIMIT_WINDOW=60  # 속도 제한 윈도우 (초)

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=wordsearch.log